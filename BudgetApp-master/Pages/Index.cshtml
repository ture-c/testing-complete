@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-3 background-box">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">

            <img src="~/images/logo.png" alt="BudgetWise Logo" class="logo">

            <h1 class="display-4">Design your perfect budget.</h1>
            <p class="lead">Keep track of your expenses and start saving money today!</p>
            <p>Register an account and log in to get started.</p>

            <div class="mt-3">
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" id="register">📝 Register</a>
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Login" id="login">🔑 Log in</a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #e2e2e2, #c9d6ff);
    }

    #register, #login {
        border-radius: 50px;
    }

    .logo {
        width: 100px; /* Ändra storlek vid behov */
        margin-bottom: 20px; /* Avstånd mellan loggan och titeln */
    }

</style>